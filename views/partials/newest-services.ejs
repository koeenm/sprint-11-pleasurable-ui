<section class="main__uitgelicht">
  <h2>Nieuwste initiatieven</h2>
  <ul class="main__index--services">
      <% 
      // Sorter services op ID van hoog naar laag, en pak alleen de eerste 3
      services.sort((a, b) => b.id - a.id).slice(0, 3).forEach((service) => { 
      %>
      <li class="main__index--service">
        <img loading="lazy" src="<%= service.image ? 'https://fdnd-agency.directus.app/assets/' + service.image : '/assets/360_F_248426448_NVKLywWqArG2ADUxDq6QprtIzsF82dMF.jpg' %>" alt="Image">
          <section class="main__index--service-txt">
              <h3><%= service.title %></h3>
              <p><%= service.short_description %></p>
              <a href="/service/<%= service.slug %>">Bekijk dit initiatief âžœ</a>
          </section>
      </li>
      <% }); %>
  </ul>
</section>